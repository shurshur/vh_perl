#!/bin/sh

src="$1"
dst="$2"

consts=""

gen() {
  flt=$1
  file=$2
  {
    echo "# $flt* constants from $file"
    echo 'use constant {'
    grep $flt "$src"/src/$file |sed 's/=/=>/'|perl -pne 's/\t/\ /g; s@//+@#@g'
    echo '};'
    echo
  } >> "$dst"
  c=$(grep $flt "$src"/src/$file|awk '{ print $1 }'|perl -pne tr/\\n/\ /)
  consts="$consts
   $c"
}

mkdir -p $(dirname "$dst")

cat > "$dst" <<EOF1
package vh;

use 5.008;
use strict;
use warnings;
use Carp;

require Exporter;

our @ISA = qw(Exporter);

our %EXPORT_TAGS = qw();

our @EXPORT = qw();

our \$VERSION = '0.01';

EOF1

gen eSF_ cconndc.h
gen eBF_ cban.h
gen eUC_ cuser.h
gen eUR_ cuser.h

echo "our @EXPORT_OK = qw($consts
);" >> "$dst"

cat >> "$dst" <<EOF2

1;

__END__

=head1 NAME

vh::const - autogenerated Perl module with Verlihub constants

=head1 SYNOPSIS

Don't use this module because vh module imports all constant

  use vh;

  print "eBF_SHARE=".vh::eBF_SHARE."\n";

=cut=
EOF2
